pipeline {
    agent any 
    tools {
        maven 'M2_HOME'
    }
    stages{
        stage('sonarqube scan'){
            steps{
               withSonarQubeEnv('sonarver'){
                sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=alkero2023_Week16-code'
            }
            }
        }
        stage('all maven commands'){
            steps{
                sh 'mvn clean compile install package'
            }
        }
    }
}